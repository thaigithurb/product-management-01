extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 

    +alert-error('1000')
    +alert-success('1000')

    div(class="my-[60px]")
        
        h1(class="text-center")  Lấy lại mật khẩu

        div(class="flex justify-center")
            form(action=`/user/password/forgot` method="POST" class="w-[400px]")
                label(class="text-[20px]") Email
                input(type="email" id="email" name="email"  class="text-[18px] w-full pl-[10px] mt-[10px] mb-[30px] outline-none h-[50px] rounded-[8px] border border-[#CFCFCF]" required)
                button(type="submit" class=" mb-[20px] cursor-pointer w-full h-[50px] rounded-[8px] text-[#ffff]  outline-none border border-[#0078F0] hover:bg-[#0066CC] bg-[#0078F0]" ) Gửi mail xác nhận