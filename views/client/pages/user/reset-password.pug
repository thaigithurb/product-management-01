extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 

    +alert-error('1000')
    +alert-success('1000')

    div(class="my-[60px]")
        
        h1(class="text-center")  Đổi mật khẩu

        div(class="flex justify-center")
            form(action=`/user/password/reset` method="POST" class="w-[400px]")
                label(class="text-[20px]") Mật khẩu mới
                input(type="password" id="newPassword" name="newPassword"  class="text-[18px] w-full pl-[10px] mt-[10px] mb-[30px] outline-none h-[50px] rounded-[8px] border border-[#CFCFCF]" required)
                label(class="text-[20px]") Xác nhận mật khẩu
                input(type="password" id="confirmPassword" name="confirmPassword"  class="text-[18px] w-full pl-[10px] mt-[10px] mb-[30px] outline-none h-[50px] rounded-[8px] border border-[#CFCFCF]" required)
                button(type="submit" class=" mb-[20px] cursor-pointer w-full h-[50px] rounded-[8px] text-[#ffff]  outline-none border border-[#0078F0] hover:bg-[#0066CC] bg-[#0078F0]" ) Đổi mật khẩu