extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main 


        +alert-error('1000')

        h1(class="mb-[4px]") Chỉnh sửa thông tin cá nhân

        form(action=`${prefixAdmin}/my-account/edit?_method=PATCH` id="edit-my-account-form" enctype="multipart/form-data" method="POST") 
            div(class="mt-[15px]") 
                label(for="fullName") Họ tên *
                input(
                    type="text"
                    class="p-[15px] w-full mt-[5px] outline-none border rounded-[8px]"
                    id="fullName"
                    name="fullName"
                    value=user.fullName
                )
            div(class="mt-[15px]") 
                label(for="email") Email *
                input(
                    type="text"
                    class="p-[15px] w-full mt-[5px] outline-none border rounded-[8px]"
                    id="email"
                    name="email"
                    value=user.email
                )
            div(class="mt-[15px]") 
                label(for="password") Mật khẩu
                input(
                    type="text"
                    class="p-[15px] w-full mt-[5px] outline-none border rounded-[8px]"
                    id="password"
                    name="password"
                )
            div(class="mt-[15px]") 
                label(for="phone") Số điện thoại
                input(
                    type="text"
                    class="p-[15px] w-full mt-[5px] outline-none border rounded-[8px]"
                    id="phone"
                    name="phone"
                    value=user.phone
                )
            div(class="mt-[15px]") 
                label(for="avatar") Avatar
                div(class=" p-[15px] mt-[5px] outline-none overflow-hidden border rounded-[8px]")
                    input(
                        type="file"
                        class="w-full"
                        id="avatar"
                        name="avatar"
                        accept="image/*"
                    )
                    img(id="blah" src=user.avatar alt="your image" class="w-[500px] object-cover mt-[5px] border rounded-[8px] w-[100px]")
            div(class="mt-[20px]") 
                button(
                    type="submit"
                    class="p-[15px] text-[18px] rounded-[8px] bg-[#0071E1] hover:bg-[#0066CC] border-none text-[#ffff] cursor-pointer"
                ) Cập nhật

                        
        script(src="/admin/js/script.js")  
        

        


