extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 

    +alert-error('1000')

    h1(class="mb-[4px]") Chỉnh sửa nhóm quyền

    form(action=`${prefixAdmin}/roles/edit/${record.id}?_method=PATCH` id="edit-records-roles-form" method="POST") 
        div(class="mt-[15px]") 
            label(for="title") Tiêu đề
            input(
                type="text"
                class="p-[15px] w-full mt-[5px] outline-none border rounded-[8px]"
                id="title"
                name="title"
                value=record.title
            )
        div(class="mt-[15px]") 
            label(for="desc") Mô tả
            textarea(
                rows="5"
                id="desc"
                name="description"
                class="w-full outline-none p-[15px] mt-[5px] "
                value=record.description
            ) !{record.description}
        div(class="mt-[20px]") 
            button(
                type="submit"
                class="p-[15px] text-[18px] rounded-[8px] bg-[#0071E1] hover:bg-[#0066CC] border-none text-[#ffff] cursor-pointer"
            ) Cập nhật

                    
    script(src="/admin/js/script.js")  
       

    


