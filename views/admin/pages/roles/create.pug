extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main 
    h1(class="mb-[4px]") Thêm mới nhóm quyền

    +alert-error('1000')


    form(action=`${prefixAdmin}/roles/create` id="create-role-form" method="POST") 
        div(class="mt-[15px]") 
            label(for="title") Tiêu đề
            input(
                type="text"
                class="p-[15px] w-full mt-[5px] outline-none border rounded-[8px]"
                id="title"
                name="title"
            )
        div(class="mt-[15px]") 
            label(for="desc") Mô tả
            textarea(
                rows="5"
                id="desc"
                name="description"
                class="w-full outline-none p-[15px] mt-[5px]"
            )
        div(class="mt-[20px]") 
            button(
                type="submit"
                class="p-[15px] text-[18px] rounded-[8px] bg-[#0071E1] hover:bg-[#0066CC] border-none text-[#ffff] cursor-pointer"
            ) Tạo mới

    script(src="/admin/js/script.js")  

    


