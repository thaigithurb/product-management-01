extends ../../layouts/default.pug


block main 
    div(class="") 
        h1 Trang tổng quan
        div(class="border-[2px] rounded-[8px] border-[#D9D9D9]")
                div(class="bg-[#F2F2F2] p-[15px] rounded-t-[8px]") Thông tin tài khoản
                div(class="p-[15px] flex justify-between items-center border-t-[2px] border-[#D9D9D9]")
                    div 
                        if (user.avatar)
                            img(
                                src=user.avatar
                                class="h-[100px] mb-[15px]"
                            )
                        if (user.fullName)
                            p Họ tên: <b>#{user.fullName}</b>
                        if (user.email)
                            p Email: <b>#{user.email}</b>
                        if (user.phone)
                            p Số điện thoại: <b>#{user.phone}</b>
                        if (role.title)
                            p Phân quyền: <b>#{role.title}</b>
                            
        div(class="mt-[30px] flex gap-[30px]")
            div(class="border-[2px] w-full rounded-[8px] border-[#D9D9D9]")
                    div(class="bg-[#F2F2F2] p-[15px] rounded-t-[8px]") Danh mục sản phẩm
                    div(class="p-[15px] flex justify-between items-center border-t-[2px] border-[#D9D9D9]")
                        div 
                            p Số lượng: <b>#{statistic.productsCategory.total}</b>
                            p Hoạt động: <b>#{statistic.productsCategory.active}</b>
                            p Dừng hoạt động: <b>#{statistic.productsCategory.inactive}</b>
            div(class="border-[2px]  w-full rounded-[8px] border-[#D9D9D9]")
                    div(class="bg-[#F2F2F2] p-[15px] rounded-t-[8px]") Sản phẩm
                    div(class="p-[15px] flex justify-between items-center border-t-[2px] border-[#D9D9D9]")
                        div 
                            p Số lượng: <b>#{statistic.products.total}</b>
                            p Hoạt động: <b>#{statistic.products.active}</b>
                            p Dừng hoạt động: <b>#{statistic.products.inactive}</b>

        div(class="mt-[30px] flex gap-[30px]")
            div(class="border-[2px] w-full rounded-[8px] border-[#D9D9D9]")
                    div(class="bg-[#F2F2F2] p-[15px] rounded-t-[8px]") Tài khoản admin
                    div(class="p-[15px] flex justify-between items-center border-t-[2px] border-[#D9D9D9]")
                        div 
                            p Số lượng: <b>#{statistic.accounts.total}</b>
                            p Hoạt động: <b>#{statistic.accounts.active}</b>
                            p Dừng hoạt động: <b>#{statistic.accounts.inactive}</b>
            div(class="border-[2px]  w-full rounded-[8px] border-[#D9D9D9]")
                    div(class="bg-[#F2F2F2] p-[15px] rounded-t-[8px]") Tài khoản client
                    div(class="p-[15px] flex justify-between items-center border-t-[2px] border-[#D9D9D9]")
                        div 
                            p Số lượng: <b>#{statistic.users.total}</b>
                            p Hoạt động: <b>#{statistic.users.active}</b>
                            p Dừng hoạt động: <b>#{statistic.users.inactive}</b>
                    
                    